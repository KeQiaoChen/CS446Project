<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/musicIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/music" />
    
    <TextView
        android:id="@+id/fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_name"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/musicIcon"
        android:layout_toEndOf="@+id/musicIcon" />

    <SeekBar
        android:id="@+id/songProgressBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fileName"
        android:layout_toEndOf="@id/elapsedTime"
        android:layout_toRightOf="@id/elapsedTime"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:max="100" />

    <TextView
        android:id="@+id/elapsedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fileName"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="@string/time_placeholder"
        android:textSize="15sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/remainingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/songProgressBar"
        android:layout_toRightOf="@id/songProgressBar"
        android:layout_below="@id/fileName"
        android:text="@string/time_placeholder"
        android:textSize="15sp"
        android:textColor="#000000" />

</RelativeLayout>