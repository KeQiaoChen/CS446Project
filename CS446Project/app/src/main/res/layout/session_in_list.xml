<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewSessionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/session_name_placeholder"
        android:textSize="30sp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonJoinThisSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join"
        android:layout_toEndOf="@id/textViewSessionName"
        android:layout_toRightOf="@id/textViewSessionName" />

</RelativeLayout>